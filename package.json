{
	"name": "@terrahop/svelte-utils",
	"version": "2.1.0",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"package:watch": "svelte-package -w",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint --max-warnings=0 --no-warn-ignored ./src"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./actions": {
			"types": "./dist/actions/index.d.ts",
			"svelte": "./dist/actions/index.js"
		},
		"./components": {
			"types": "./dist/components/index.d.ts",
			"svelte": "./dist/components/index.js"
		},
		"./stores": {
			"types": "./dist/stores/index.d.ts",
			"svelte": "./dist/stores/index.js"
		},
		"./util": {
			"types": "./dist/util/index.d.ts",
			"svelte": "./dist/util/index.js"
		}
	},
	"peerDependencies": {
		"@floating-ui/dom": "^1.6.11",
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0-next.1"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.6.13",
		"@steeze-ui/heroicons": "^2.4.2",
		"@steeze-ui/svelte-icon": "^1.6.2",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.15.3",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "4.0.0",
		"@terrahop/eslint-config-svelte": "github:Terrahop/eslint-config-svelte#v1.2.0",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.23",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"postcss": "^8.5.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"publint": "^0.3.2",
		"svelte": "5.18.0",
		"svelte-check": "^4.1.4",
		"tailwindcss": "3.4.17",
		"typescript": "^5.7.3",
		"typescript-svelte-plugin": "^0.3.45",
		"vite": "^5.4.11"
	}
}
